<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="391dp"
        android:layout_height="115dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="8dp"
        android:background="#FEF7FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginTop="0dp"
            android:onClick="pagina"
            app:srcCompat="@drawable/medicine" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:fontFamily="@font/alata"
            android:text="Nome:"
            android:textColor="#245083"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/alata"
            android:text="Valor:"
            android:textColor="#245083"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/alata"
            android:text="Quantidade:"
            android:textColor="#245083"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listar_nomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="6dp"
            android:text="Dipirona"
            android:textColor="#f9ab27"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/listar_Preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="179dp"
            android:layout_marginTop="41dp"
            android:text="R$10,90"
            android:textColor="#f9ab27"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/listar_Quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="242dp"
            android:layout_marginTop="77dp"
            android:text="50"
            android:textColor="#f9ab27"
            android:textSize="16sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>